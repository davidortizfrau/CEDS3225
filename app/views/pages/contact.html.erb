<h1 class="page-header">Contact me</h1>
<div class="row">
	<div class="col-lg-4">
		<form action="/send_message" method="post" id="contact_form">
			<div class="form-group">
				<label>Name</label>
				<input name="name" class="form-control" type="text">
			</div>
			<div class="form-group">
				<label>Email</label>
				<input name="email" class="form-control" type="text-area">
			</div>
			<div class="form-group">
				<label>Content</label>
				<textarea name="content" class="form-control" type="text" rows="5"></textarea>
			</div>
			<div class="actions">
				<!-- <button type="submit" class="btn btn-default" id="send_mail" data-loading-text="Sending Mail...">Send</button> -->
				<input id="send_mail" class="btn btn-default" type="submit" value="Send" data-loading-text="Sending Mail...">
			</div>
		</form>
	</div>
</div>

